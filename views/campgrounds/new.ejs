<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <form action="/campgrounds" method="POST" novalidate class="validated-form"
                        enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input class="form-control" type="text" id="title" name="campground[title]" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="location">Location</label>
                            <input class="form-control" type="text" id="location" name="campground[location]" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="price">Campground Price</label>
                            <div class="input-group">
                                <span class="input-group-text" id="price-label">$</span>
                                <input class="form-control" type="text" id="price" placeholder="0.00"
                                    name="campground[price]" aria-describedby="price-label" aria-label="price" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <input class="form-control" type="text" id="description" name="campground[description]"
                                required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3 custom-file">
                            <label for="image" class="form-label custom-file-label">Upload images</label>
                            <input class="form-control custom-file-input col-6" type="file" id="image" name="image"
                                multiple>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success" type="submit">Add campground</button>
                        </div>
                    </form>
                    <a href="/campgrounds">All campgrounds</a>
                </div>
            </div>
        </div>
    </div>